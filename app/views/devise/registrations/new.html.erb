<div class="registration-main">
  <div class=" form_wrap">
    <div class="form_header">
      <p><%= image_tag "school003.png", size: "50x40" %></p>
      <p>新規登録</p>
      <p><%= image_tag "school003.png", size: "50x40" %></p>
    </div>
        
        <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
          <%= render 'devise/shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :child_name, "お子さんのお名前" %><br />
          <%= f.text_field :child_name %>
        </div>

        <div class="field">
          <%= f.label :classroom, "クラス" %><br />
          <%= f.text_area :classroom, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :childminder1, "担任の先生のお名前" %><br />
          <%= f.text_area :childminder1, class: :form__text %>
        </div>


        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>

          <%=link_to "トップへ戻る", root_path, class: :top_btn%>   
        <div class="registration_pict"><%= image_tag "374836.png", size: "600x400" %></div>
   </div>
  </div>
